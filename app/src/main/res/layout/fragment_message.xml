<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bai.van.radixe.fragment.MessageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/mainColor"
            android:orientation="horizontal"
            android:elevation="2dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="44dp"
                android:layout_width="44dp"
                android:id="@+id/myIcon"
                android:src="@drawable/user_icon"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/white_inpute"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/myName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:fontFamily="monospace"
                    android:textColor="@color/white_inpute"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/myMajor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:fontFamily="monospace"
                    android:textColor="@color/white_inpute"
                    android:layout_weight="1.2"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/messageFragmentSwipRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:fillViewport="true"
                    android:background="@color/snow_white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:descendantFocusability="blocksDescendants">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/bittersweet"
                                android:layout_marginStart="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:text="已排考试"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/examUnfinishHeaderLayout"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/unfinish_circle_2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"/>
                                <TextView
                                    android:id="@+id/examHeaderUnfinishColor"
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/silver_sand"
                                    android:layout_gravity="center_horizontal"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/examHeaderUnfinishText"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical"
                                android:text="未完成考试"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/tuatara"/>
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/examUnfinishRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                        </android.support.v7.widget.RecyclerView>

                        <LinearLayout
                            android:id="@+id/examFinishHeaderLayout"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="@color/snow_white">
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/finish_circle_2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="18dp"/>
                                <TextView
                                    android:id="@+id/examFinishHeaderColor"
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/silver_sand"
                                    android:layout_gravity="center_horizontal"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/examFinishHeaderText"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginTop="18dp"
                                android:gravity="center_vertical"
                                android:text="已完成考试"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="@color/steel"/>
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/examFinishRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                        </android.support.v7.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:background="@color/snow_white">
                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/bittersweet"
                                android:layout_marginStart="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="未排考试"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/examInscheduleRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:scrollbars="none">
                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>