<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="18dp"
                    android:background="@color/silver_sand"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/examScheduleIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/finish_circle_1"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/examScheduleFootColor"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/silver_sand"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/examScheduleNameText"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:text="专业英语阅读与交流(2)"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/aluminum"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/examScheduleTimeWeekText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周二"
                    android:background="@drawable/my_exam_information_ksmc"
                    android:textColor="@color/white"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/examScheduleTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="2017年全校统一期末考试"
                    android:background="@drawable/my_exam_information_ksmc"
                    android:textColor="@color/white"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试时间:"
                    android:textSize="14sp"
                    android:textColor="@color/aluminum"/>
                <TextView
                    android:id="@+id/examScheduleTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:text="2018-01-05 14:00-16:00"
                    android:textColor="@color/aluminum"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试地点:"
                    android:textSize="14sp"
                    android:textColor="@color/aluminum"/>
                <TextView
                    android:id="@+id/examScheduleAddressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="力行楼1203"
                    android:textSize="14sp"
                    android:textColor="@color/aluminum"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>