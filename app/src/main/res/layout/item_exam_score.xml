<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/snow_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/item_score_circle_background_top_right"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/item_score_circle_background_top_left"/>
        <View
            android:layerType="software"
            android:layout_width="match_parent"
            android:layout_height="2.1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dash_line" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/item_score_circle_background_bottom_right"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/item_score_circle_background_bottom_left"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/examScoreValue"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:maxLines="1"
                android:text="99.0"
                android:textColor="@color/bittersweet"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/examScoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="毛泽东思想和中国特色社会主义理论体系概论(上)"
                    android:textColor="@color/tuatara"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/examType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/card_score_type_text_background"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="学科基础"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/examScoreGpa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="绩点：3.7"
                        android:textColor="@color/steel"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/examScoreCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:text="学分：3"
                        android:textColor="@color/steel"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>